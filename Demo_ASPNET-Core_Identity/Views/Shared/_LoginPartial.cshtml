@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline"  asp-controller="Login" asp-action="LogOut" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{

<li class="nav-item">
    <a class="nav-link text-dark" asp-controller="Login" asp-action="Register">Register</a>
</li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Login" asp-action="Index">Login</a>
    </li>
}
</ul>
